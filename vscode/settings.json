{
  // UI を縮小
  "window.zoomLevel": -1,

  // ウィンドウを透過する
  // cf. https://marketplace.visualstudio.com/items?itemName=s-nlf-fh.glassit
  "glassit.alpha": 220,
  "glassit.step": 10,

  // ミニマップ (エディタ右端の帯) を無効化
  "editor.minimap.enabled": false,
  // コード整形に prettier を使う
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // ファイル保存時にコード整形する
  "editor.formatOnSave": true,
  // ファイル保存時にリントエラーを自動修正する
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // モノレポで eslintrc を検出する
  "eslint.workingDirectories": [{ "mode": "auto" }],
  // vim extension の surround 機能を有効化
  "vim.surround": true,

  // JavaScript, TypeScript で ファイル移動時に import パスを更新する
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // emmet のサジェストを表示しない
  "emmet.showAbbreviationSuggestions": false,

  // devcontainer に dotfiles をインストールする
  "dotfiles.repository": "https://github.com/somq14/dotfiles.git",
  "dotfiles.targetPath": "~/dotfiles",
  "dotfiles.installCommand": "~/dotfiles/devcontainer/install.sh"
}

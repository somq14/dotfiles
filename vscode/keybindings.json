[
    // ctrl+jでパネルをトグルするため
    {
        "key": "ctrl+j",
        "command": "-extension.vim_ctrl+j",
        "when": "editorTextFocus && vim.active && vim.use<C-j> && !inDebugRepl"
    },
    // ctrl+jで改行をするため
    {
        "key": "ctrl+m",
        "command": "-editor.action.toggleTabFocusMode"
    },
    // ctrl+hをbackspaceにするため
    {
        "key": "ctrl+h",
        "command": "deleteLeft",
        "when": "inputFocus"
    },
    // ターミナルではctrl+pによるquickOpenを無効化
    {
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen",
        "when": "!terminalFocus"
    },
    // ターミナルではctrl+eによるquickOpenを無効化
    {
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpen"
    },
    {
        "key": "ctrl+e",
        "command": "workbench.action.quickOpen",
        "when": "!terminalFocus"
    },
]